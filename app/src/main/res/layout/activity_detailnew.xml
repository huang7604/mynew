<?xml version="1.0" encoding="utf-8"?>
<com.mynew.view.viewgroup.SlidingFinishLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_sliding_finish">

    <com.mynew.view.viewgroup.TitleBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/title_bar"
        title:title_text="新闻详情"
        title:right_button_visible="false"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/content_title"
               android:textColor="#000000"
               android:textSize="25sp"
               android:layout_marginBottom="10dp"
               android:lineSpacingExtra="5dp"/>
            <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/content_source"
               android:textColor="#000000" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/content_time"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"/>
            <com.mynew.view.htmltextview.HtmlTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/html_text_view"
                android:textColor="#000000"
                android:textSize="18sp"
                android:lineSpacingExtra="8dp"/>
        </LinearLayout>
    </ScrollView>



</com.mynew.view.viewgroup.SlidingFinishLayout>